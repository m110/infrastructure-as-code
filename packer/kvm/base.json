{
    "builders": [
        {
            "type": "qemu",
            "boot_command": [
                "{{ user `boot_command_prefix` }}",
                "/install/vmlinuz noapic ",
                "file=/floppy/{{ user `preseed` }} ",
                "debian-installer={{ user `locale` }} auto locale={{ user `locale` }} kbd-chooser/method=us ",
                "hostname={{ user `hostname` }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP ",
                "keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "passwd/user-fullname={{ user `ssh_fullname` }} ",
                "passwd/user-password={{ user `ssh_password` }} ",
                "passwd/user-password-again={{ user `ssh_password` }} ",
                "passwd/username={{ user `ssh_username` }} ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "floppy_files": [
                "http/{{ user `preseed` }}"
            ],
            "headless": "{{ user `headless` }}",
            "http_directory": "http",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_url` }}"
            ],
            "output_directory": "output-{{ user `vm_name` }}",
            "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "10000s",
            "vm_name": "{{ user `vm_name` }}",
            "qemuargs": [
                [ "-m", "{{ user `memory` }}" ],
                [ "-smp", "cpus={{ user `cpus`}}"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "{{ template_dir }}/../scripts/python.sh",
                "{{ template_dir }}/../scripts/apt-cleanup.sh"
            ],
            "execute_command": "echo '{{ user `ssh_password` }}' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
        }
    ],
    "post-processors": [
        {
            "type": "checksum",
            "checksum_types": ["sha256"],
            "output": "output-{{ user `vm_name` }}/{{ user `vm_name` }}_{{ .ChecksumType }}.checksum"
        },
        {
            "type": "manifest",
            "output": "output-{{ user `vm_name` }}/manifest.json",
            "strip_path": true
        }
    ],
    "variables": {
        "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "cpus": "1",
        "disk_size": "65536",
        "headless": "",
        "locale": "en_US",
        "memory": "512",
        "preseed" : "preseed.cfg",
        "hostname": "ubuntu",
        "ssh_fullname": "ubuntu",
        "ssh_password": "ubuntu",
        "ssh_username": "ubuntu",
        "version": "0.1.0",
        "vm_name": "ubuntu-base",
        "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
        "iso_checksum_type": "sha256",
        "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04.3-server-amd64.iso"
    }
}
